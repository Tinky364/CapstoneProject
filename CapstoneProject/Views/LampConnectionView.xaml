<UserControl
    x:Class="CapstoneProject.Views.LampConnectionView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:views="clr-namespace:CapstoneProject.Views"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <!--  Headers definition  -->
            <RowDefinition Height="Auto" />
            <!--  Contents definition  -->
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!--  Headers  -->
        <!--  Connection Header  -->
        <Border
            Grid.Row="0"
            Margin="5,5"
            Style="{StaticResource PanelBorder}">

            <TextBlock
                Margin="10,0"
                Style="{StaticResource Header}"
                Text="Lamp Connection" />
        </Border>

        <!--  Contents  -->
        <!--  Connection Content  -->
        <Border
            Grid.Row="1"
            Margin="5,5"
            Style="{StaticResource PanelBorder}">

            <Button
                Grid.Column="0"
                MinWidth="75"
                Margin="3,0,0,3"
                Command="{Binding ConnectLampCommand}"
                Style="{StaticResource Button}">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="7" />
                    </Style>
                </Button.Resources>
                <StackPanel Orientation="Horizontal">
                    <Image
                        MaxHeight="200"
                        Margin="5"
                        Source="pack://application:,,,/Icons/ConnectionStatus.png"
                        Stretch="Uniform" />
                    <TextBlock
                        Margin="0,0,5,0"
                        VerticalAlignment="Center"
                        FontSize="100"
                        Text="Connect" />
                </StackPanel>
            </Button>
        </Border>
    </Grid>
</UserControl>
