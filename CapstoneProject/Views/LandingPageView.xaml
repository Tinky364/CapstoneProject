<UserControl
    x:Class="CapstoneProject.Views.LandingPageView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:views="clr-namespace:CapstoneProject.Views"
    xmlns:vms="clr-namespace:CapstoneProject.ViewModels"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
        <Grid.RowDefinitions>
            <!--  Headers definition  -->
            <RowDefinition Height="Auto" />
            <!--  Contents definition  -->
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <!--  Overview Header  -->
            <ColumnDefinition Width="150*" MaxWidth="300" />
            <!--  Grid Splitter definition  -->
            <ColumnDefinition Width="5" />
            <!--  Analysis Header  -->
            <ColumnDefinition Width="300*" />
        </Grid.ColumnDefinitions>

        <GridSplitter
            Grid.Row="0"
            Grid.RowSpan="2"
            Grid.Column="1"
            Width="5"
            HorizontalAlignment="Stretch"
            Background="Coral">
            <GridSplitter.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="3" />
                </Style>
            </GridSplitter.Resources>
        </GridSplitter>

        <!--  Overview Header  -->
        <Border
            Grid.Row="0"
            Grid.Column="0"
            Margin="5 5"
            Style="{StaticResource PanelBorder}">

            <TextBlock
                Margin="10 5"
                Style="{StaticResource Header}"
                Text="{Binding OverviewHeader}" />
        </Border>

        <!--  Analysis Header  -->
        <Border
            Grid.Row="0"
            Grid.Column="2"
            Margin="5,5"
            Style="{StaticResource PanelBorder}">

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                
                <TextBlock
                    Grid.Column="0"
                    Margin="10 5"
                    Style="{StaticResource Header}"
                    Text="Daily Analysis" />
                
                <Border 
                    Margin="2"
                    Grid.Column="2" 
                    Style="{StaticResource FloralPropertyBorder}" />
                <StackPanel
                    Orientation="Horizontal"
                    Grid.Column="2">
                    <Image
                        MaxHeight="30"
                        Margin="5 5 0 5"
                        Source="pack://application:,,,/Icons/Id.png"
                        Stretch="Uniform" />
                    <TextBlock
                        Margin="5,0"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center"
                        FontSize="20"
                        Foreground="OrangeRed"
                        Text="Lamp ID:" />
                    <ComboBox
                        Margin="5 5 10 5"
                        VerticalAlignment="Center"
                        FontSize="20"
                        ItemsSource="{Binding DatabaseLampIds}"
                        SelectedItem="{Binding SelectedDatabaseLampId, UpdateSourceTrigger=PropertyChanged}"
                        IsEditable="True"
                        IsReadOnly="True"
                        Focusable="False"
                        Text="none">
                    </ComboBox>
                </StackPanel>
            </Grid>
        </Border>

        <!--  Overview Content  -->
        <Grid
            Grid.Row="1"
            Grid.Column="0">
            <Grid.Resources>
                <DataTemplate DataType="{x:Type vms:LampConnectionViewModel}">
                    <views:LampConnectionView />
                </DataTemplate>
                
                <DataTemplate DataType="{x:Type vms:LampOverviewViewModel}">
                    <views:LampOverviewView />
                </DataTemplate>
            </Grid.Resources>
            
            <ContentControl Content="{Binding OverviewContent}" />
        </Grid>
        
        <!--  Analysis Content  -->
        <Grid
            Grid.Row="1"
            Grid.Column="2">
            <Grid.Resources>
                <DataTemplate DataType="{x:Type vms:DailyAnalysisListViewModel}">
                    <views:DailyAnalysisListView />
                </DataTemplate>
                
                <DataTemplate DataType="{x:Type vms:DailyAnalysisTextViewModel}">
                    <views:DailyAnalysisTextView />
                </DataTemplate>
            </Grid.Resources>
            
            <ContentControl Content="{Binding AnalysisContent}" />
        </Grid>
    </Grid>
</UserControl>
